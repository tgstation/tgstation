<ui-display title='Direction'>
	{{#each data.preview_rows}}
		<ui-section>
			{{#each previews}}
				<ui-button state='{{selected ? "selected" : null}}' action='setdir'
					params='{"dir": {{dir}}, "flipped": {{flipped}}}'><span class='pipes32x32 {{dir}}-{{icon_state}}' title='{{dir_name}}'></span></ui-button>
			{{/each}}
		</ui-section>
	{{/each}}
</ui-display>
