html
  box-sizing: border-box
  min-height: 100%
  margin: 0

  cursor: default // Reset the cursor.

// This really should be the default
*, *:before, *:after
  box-sizing: inherit

body
  min-height: 100%
  height: 100%
  margin: 0 6px

  background-color: colors.background-end; // Fallback for old browsers.

  font-family: font
  font-size: fontsize
  color: colors.text

main
  display: block
  margin-top: 32px
  padding-top: 3px


hr
  background-color: colors.rule
  border: none
